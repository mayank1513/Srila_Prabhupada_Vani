<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/rect1"
    android:descendantFocusability="blocksDescendants"
    tools:ignore="ContentDescription">
    <ImageView
        android:id="@+id/arte"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/ripple"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/haribol" />
    <TextView android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:singleLine="true"
        android:text="Hare Krishna"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />
    <TextView android:id="@+id/lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="40dp"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="-0.5"
        android:shadowDy="-0.5"
        android:shadowRadius="8"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        android:fontFamily="cursive"
        android:typeface="serif" />
    <TextView android:id="@+id/artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:singleLine="true"
        android:text="HDG Bhaktivedanta Swami"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic|bold"
        android:typeface="serif" />
    <TextView android:id="@+id/date_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="end"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:singleLine="true"
        android:text="date place"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textSize="10sp" />
    <TextView android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="45dp"
        android:fontFamily="serif"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:singleLine="true"
        android:text="Author: "
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:textSize="10sp" />
    <ImageButton android:id="@+id/list_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/ripple"
        android:src="@drawable/delete"
        android:tint="@android:color/white" />
</FrameLayout>