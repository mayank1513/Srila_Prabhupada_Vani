<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <View android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/tool_bar_height"
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="3000dp"/>
    <FrameLayout
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="@dimen/headerHeight">
        <ImageView android:id="@+id/arte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:foreground="@drawable/c_grad"
            android:foregroundTint="@color/statusBarColor"
            android:background="@color/statusBarColor"
            android:src="@drawable/sp" />
        <Button
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:fontFamily="serif"
            android:onClick="onClick"
            android:padding="5dp"
            android:text="His Divine Grace A. C. Bhakti Vedanta Swami Prabhupada"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </FrameLayout>
    <ListView android:id="@+id/drawerList"
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="@dimen/headerHeight"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="@drawable/bg_with_shadow"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageButton
            android:id="@+id/web"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:onClick="onClick"
            android:background="@drawable/ripple"
            android:src="@drawable/web" />

        <ImageButton
            android:id="@+id/vedabasebtn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:scaleType="fitCenter"
            android:onClick="onClick"
            android:background="@drawable/ripple"
            android:src="@drawable/ic_launcher_round" />

        <ImageButton
            android:id="@+id/app"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:scaleY=".7"
            android:scaleX=".7"
            android:onClick="onClick"
            android:background="@drawable/ripple"
            android:src="@drawable/app" />

        <ImageButton
            android:id="@+id/fb"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:onClick="onClick"
            android:background="@drawable/ripple"
            android:src="@drawable/fb" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:background="@drawable/ripple"
            android:src="@drawable/twitter" />

        <ImageButton
            android:id="@+id/in"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:onClick="onClick"
            android:background="@drawable/ripple"
            android:src="@drawable/in" />

        <ImageButton
            android:id="@+id/yt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:onClick="onClick"
            android:scaleY="1.4"
            android:scaleX="1.4"
            android:background="@drawable/ripple"
            android:src="@drawable/yt" />

        <ImageButton
            android:id="@+id/filter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:onClick="onClick"
            android:background="@drawable/ripple"
            android:tint="@color/colorAccent"
            android:src="@drawable/filter" />

        <ImageButton
            android:id="@+id/cut"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:onClick="onClick"
            android:background="@drawable/ripple"
            android:tint="@color/colorAccent"
            android:src="@drawable/cut" />

        <ImageButton
            android:id="@+id/bookmarks"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:onClick="onClick"
            android:scaleX=".8"
            android:scaleY=".8"
            android:background="@drawable/ripple"
            android:src="@drawable/bookmark_blue" />

        <ImageButton
            android:id="@+id/add_bookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="onClick"
            android:rotationY="180"
            android:background="@drawable/ripple"
            android:foreground="@drawable/add"
            android:src="@drawable/bookmark_blue" />
    </LinearLayout>
</FrameLayout>
