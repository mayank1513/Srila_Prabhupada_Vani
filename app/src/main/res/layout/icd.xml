<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_nectar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/tool_bar_height"
    android:paddingBottom="@dimen/musicControlHeight"
    android:onClick="onClick"
    android:visibility="gone">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:background="#f6e3e3">

        <TextView
            android:id="@+id/daily_nectar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="casual"
            android:padding="10dp"
            android:text="Daily Nectar: \n"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />

        <TextView
            android:id="@+id/bsrm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_nectar"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:padding="10dp"
            android:text="His Holiness Bhakti Rasamrita Swami"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <ImageButton
            android:id="@+id/send_daily_nectar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/bsrm"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:src="@android:drawable/ic_menu_send"
            android:onClick="onClick"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</FrameLayout>